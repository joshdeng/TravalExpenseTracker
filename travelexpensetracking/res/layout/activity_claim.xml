<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.cs.travelexpensetracking.ClaimActivity" >

     <LinearLayout
        android:background="@color/skyblue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="100"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/TitleClaimName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="ClaimName"
            android:textColor="@color/white"
            android:textSize="35sp" />

    </LinearLayout>
    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="20"
	        android:background="@color/white"
	        android:orientation="vertical" >

	        <ListView
	            android:id="@+id/listViewExpense"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >
	        </ListView>

    </LinearLayout>
    
    <LinearLayout
        android:background="@color/skyblue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="100"
        android:orientation="horizontal" >
        
		<EditText
		    android:id="@+id/EditTextAddExpenseName"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_marginBottom="7dp"
		    android:layout_marginLeft="7dp"
		    android:layout_marginRight="7dp"
		    android:layout_marginTop="9dp"
		    android:layout_weight="2"
		    android:background="@color/white"
		    android:ems="10"
		    android:hint="@string/prompt_expense_name"
		    android:textColor="@color/darkblue"
		    android:textColorLink="@color/white"
		    android:textSize="20sp" >

        <requestFocus />
    </EditText>
        
	    <Button
	        android:id="@+id/addExpenseButton"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_gravity="center"
	        android:layout_marginBottom="7dp"
	        android:layout_marginLeft="7dp"
	        android:layout_marginRight="7dp"
	        android:layout_marginTop="7dp"
	        android:layout_weight="7"
	        android:background="@color/skyblue"
	        android:foreground="@color/white"
	        android:gravity="center"
	        android:text="@string/button_text_plus_sign"
	        android:textColor="@color/white"
	        android:textSize="35sp" />

    </LinearLayout>

 

</LinearLayout>
