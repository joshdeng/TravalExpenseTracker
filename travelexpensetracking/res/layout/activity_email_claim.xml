<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical" 
    tools:context="ca.ualberta.cs.travelexpensetracking.EmailClaim" >

   <LinearLayout
        android:background="@color/skyblue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="100"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Email Claim"
            android:textColor="@color/white"
            android:textSize="35sp" />

    </LinearLayout>
    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="20"
	        android:background="@color/white"
	        android:orientation="vertical" >
			
	        
	        <TextView 
	            	android:id = "@+id/textViewEmailAddress"
	            	android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
	            	android:ems="10"
					android:layout_marginBottom="7dp" 
					android:layout_marginTop="10dp"
					android:layout_marginLeft="10dp"
					android:text = "@string/text_view_email"
	            	android:textSize = "20sp"
	            	android:textColor="@color/darkblue"
	            	
	            
	            
	            />
	        
	        <EditText
			        android:id="@+id/editTextEmailAddress"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:ems="10"
					android:layout_marginBottom="7dp" 
					android:layout_marginTop="3dp"
					android:textSize="16sp"
					android:hint="@string/prompt_name"
					android:inputType="textEmailAddress"/>
	        		
    </LinearLayout>
    
    <LinearLayout
        android:background="@color/skyblue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="100"
        android:orientation="horizontal" >

        
        
        <Button
            android:id="@+id/buttonEmailCancle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/skyblue"
            android:text="@string/button_cancle"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonEmailDone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/skyblue"
            android:text="@string/button_done"
            android:textSize="20sp" 
            android:textColor="@color/white" />
        
    </LinearLayout>
</LinearLayout>
